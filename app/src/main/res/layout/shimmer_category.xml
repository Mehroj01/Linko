<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:rotation="90"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_down" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/search_bg"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:hint="Search for anything â€¦"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textColor="@color/primary"
            android:textColorHint="@color/av_gray"
            android:textSize="14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/f"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/f" />

    <LinearLayout
        android:id="@+id/f"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle_bg"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <HorizontalScrollView
        android:id="@+id/cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/f">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" />

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/cat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>