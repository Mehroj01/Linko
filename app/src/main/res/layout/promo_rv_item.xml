<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/promo_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/text_bg"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="70dp"
        android:text=""
        android:textColor="@color/primary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/promo_edit_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit_gray"
        app:layout_constraintBottom_toBottomOf="@id/promo_et"
        app:layout_constraintRight_toRightOf="@id/promo_et"
        app:layout_constraintTop_toTopOf="@id/promo_et" />

    <TextView
        android:id="@+id/promo_claimed_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0 Claimed"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/promo_et"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="@id/promo_et"
        app:layout_constraintRight_toRightOf="@id/promo_et"
        app:layout_constraintTop_toTopOf="@id/promo_et" />

</androidx.constraintlayout.widget.ConstraintLayout>