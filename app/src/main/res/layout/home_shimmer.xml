<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linko" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:layout_marginStart="20dp"
            android:background="@drawable/search_bg"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:hint="@string/search_estore"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textColor="@color/primary"
            android:textColorHint="@color/av_gray"
            android:textSize="14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />


    <LinearLayout
        android:id="@+id/banner_sk"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:translationZ="1dp"
        app:layout_constraintTop_toTopOf="@id/separator">

        <androidx.cardview.widget.CardView
            android:id="@+id/sk_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#E3E3E3"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_1"
        android:layout_width="15dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@+id/tab_2"
        app:layout_constraintTop_toBottomOf="@id/banner_sk" />

    <LinearLayout
        android:id="@+id/tab_2"
        android:layout_width="15dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_sk" />

    <LinearLayout
        android:id="@+id/tab_3"
        android:layout_width="25dp"
        android:layout_height="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/tab_2"
        app:layout_constraintTop_toBottomOf="@id/banner_sk" />

    <LinearLayout
        android:id="@+id/c"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_1" />

    <HorizontalScrollView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/category_default_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tab_bg" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/cat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="40px"
                android:layout_marginVertical="5dp"
                app:cardBackgroundColor="#E3E3E3"
                app:cardCornerRadius="30px"
                app:cardElevation="0dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>